# Allow Ctrl-S in vim
stty -ixon

# Useful commands to shorten things up
function mkcd {
  mkdir $1
  cd $1
}
alias doit='echo sudo $(fc -ln -1) ; sudo $(fc -ln -1)'
alias gc='git clone'
alias gcm='git commit -m'
alias cd..="cd .."
alias mkx="chmod +x"
alias run="./run.sh"
alias build="./build.sh"
alias config='/usr/bin/git --git-dir=$HOME/.cfg/ --work-tree=$HOME'
alias l="ls -la"
alias pdfview="evince"
alias restart="exec zsh -i"
alias vi="nvim"
alias vim="nvim"

TERMCONF='/apps/guake/'
TERMCONFFILE='.guake'
alias loadterm='[ -f '$HOME/$TERMCONFFILE' ] && dconf dump $TERMCONF > $TERMCONFFILE.backup && dconf load $TERMCONF < $TERMCONFFILE'

